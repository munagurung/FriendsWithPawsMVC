@model FriendsWithPawsMVC.Models.Specie

@{
    ViewBag.Title = "Add new specie";
}
<div>
    @Html.ActionLink("Back to Specie List", "Index")
</div>

<h3>Add new specie</h3>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <fieldset>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.SpecieName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SpecieName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SpecieName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Add specie" class="btn btn-default" />
                </div>
            </div>
        </fieldset>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
